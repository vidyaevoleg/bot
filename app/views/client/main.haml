.container-fluid{"ng-controller"=>"DashboardCtrl"}
  .app-container
    .row
      %h2
        Подключенные биржи
        %a{"ng-click"=>"addNewAccount()"}
          %i.fa.fa-plus-circle{"aria-hidden" => "true"}
    %hr
    .account-items.row
      .accounts-item.col-xs{"ng-repeat"=>"account in accounts"}
        .accounts-item-card
          .header
            %a{"href"=>"{{'/accounts/' + account.id }}"}
              {{ account.provider }}

          .templates.row
            .templates-item.col-xs-2{"ng-repeat"=>"template in account.templates"}
              %button.btn.btn-info{"ng-click"=>"editTemplate(template)"} {{template.currency}}
            .templates-item.col-xs-2
              %button.btn.btn-success{ "ng-click"=>"addNewTemplate(account)"}
                %i.fa.fa-plus-circle{"aria-hidden" => "true"}
          .actions
            %span
              %a{"ng-click" => "editAccount(account)"}
                %i.fa.fa-pencil{"aria-hidden" => "true"}
            %span
              %a{"ng-click" => "deleteAccount($index, account.id)", style: "color: red;"}
                %i.fa.fa-times{"aria-hidden" => "true"}
